<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="26dp"
    android:paddingTop="26dp"
    android:paddingEnd="26dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="290dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/topImageViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/HeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/what_s_on_your_mind" />

        <include
            android:id="@+id/logo"
            layout="@layout/logo_layout"
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp60" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/BaseTextViewTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_one_for_now" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/HeaderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp14"
        android:text="@string/i_want_to" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_prefer_button_view" />


</androidx.appcompat.widget.LinearLayoutCompat>
